<%= form_with model: address, local:true do |f| %>

  <%= render "devise/shared/error_messages", resource: address %>

  <div class="form-group">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_area :postal_code, class: 'form-control postal_code' %>
  </div>
  <div class="form-group">
    <%= f.label :address, "住所" %>
    <%= f.text_area :address, class: 'form-control address' %>
  </div>
  <div class="form-group">
    <%= f.label :name, "宛名" %>
    <%= f.text_field :name, class: 'form-control name' %>
  </div>
  <div class="form-group mt-4">
    <%= f.submit class: 'btn btn-success' %>
  </div>

<% end %>