<div style="margin-bottom: 150px; ">
  <table class='table table-hover table-inverse' >
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody class="border">
      <% addresses.each do |address| %>
        <tr>
          <td class="border"><%= address.postal_code %></td>
          <td class="border"><%= address.address %></td>
          <td class="border"><%= address.name %></td>
          <td><%= link_to "編集する", edit_address_path(address), class: "btn btn-info" %></td>
          <td><%= link_to "削除する", address_path(address), method: :delete, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>