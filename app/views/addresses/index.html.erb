<div class="container">
  <div class="row">
    <div class="col">
      <h3>配送先登録/一覧</h3>
      <%= form_with model: @addresses, local:true do |f| %>
      <table class="table table-borderless">
        <tr>
          <th><%= f.label :postal_code, '郵便番号' %></th>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <th><%= f.label :address, '住所' %></th>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <th><%= f.label :name, '宛名' %></th>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
        </tr>
      <% end %>
      </table>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan=1 >
          </tr>
        </thead>
        <% @addresses.each do |addres| %>
        <tbody>
          <tr>
            <td><%= addresses.postal_code %></td>
            <td><%= addresses.address %></td>
            <td><%= name %></td>
            <td><%= link_to "編集する", edit_addresses_path(addresses), class: "btn btn-success" %><%= link_to " 削除する", addresses_path(addresses), method: :delete, class: "btn btn-danger ml-3" %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>