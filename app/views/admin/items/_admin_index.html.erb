<h3 class="bg-light mt-5">商品一覧</h3>
	(全<%= items.total_count %>件中、<%= items.count %>件を表示)
  <div class="col-xs-10 col-xs-offset-1">
    <%= link_to new_admin_item_path, class: "item_new" do %>
      <div class="col text-right mb-1">
        <i class="fas fa-plus-circle fa-3x text-primary"></i>
      </div>
    <% end %>
	  <table class="table table-hover table-bordered table-condensed">
      <thead>
        <tr class="bg-light">
          <th>商品ID</th>
          <td>商品名</td>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
	    <% items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item), class: 'btn_link' do %>
    		    <%= item.name %>
    		    <% end %>
          </td>
          <td class="text-right col-xs-1">
            ¥<%= item.price.to_s(:delimited) %>
          </td>
          <td><%= item.genre.name %></td>
          <% if item.is_active == true %>
            <td class="col-xs-2 text-success">販売中</td>
          <% else %>
            <td class="col-xs-2">販売停止中</td>
          <% end %>
        </tr>
	    <% end %>
	    </tbody>
	   </table>
    </div>

		<%= paginate items %>