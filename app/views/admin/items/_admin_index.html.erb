	<h2 class="py-5">商品一覧</h2>

	(全<%= items.total_count %>件中、<%= items.count %>件を表示)
  <div class="col-xs-10 col-xs-offset-1">
    <%#= link_to new_admin_item_path, data: {"turbolinks" => false}, class: "btn btn-warning pull-right new_item" do %>
    <i class="fas fa-plus"></i>
    新規商品登録
    <%# end %>
	  <table class="table table-hover table-bordered table-condensed">
      <thead>
        <tr class="info">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
	    <% items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to item_path(item), class: 'btn_link' do %>
    		    <%= item.name %>
    		    <% end %>
          </td>
          <td class="text-right col-xs-1">
            ¥<%= item.price.to_s(:delimited) %>
          </td>
          <td><%= item.genre.name %></td>
          <td class="col-xs-2">
            <%= item.is_active %>
          </td>
        </tr>
	    <% end %>
	    </tbody>
	   </table>
    </div>

		<%= paginate items %>