<div class="container">
  <div class="row mt-5">
    <div class='col-md-3 offset-md-3'>
      <%= attachment_image_tag(@item, :image, fallback: "no-image-icon.jpg", class: "item_image", style: "width: 100%; height: 80%") %>
    </div>
    <div class='col-md-4'>
      <p class="mt-3" style="font-size: 24px; font-weight: bold;"><%= @item.name %></p>
      <p style="font-size: 24px; margin-bottom: 50px;"><%= @item.introduction %></p>
      <spap style="font-size: 24px; font-weight: bold;">￥<%= @item.price.to_s(:delimited) %></span>
      <spap style="font-size: 18px; ">(税抜)</span>
      <% if @item.is_active == true %>
        <p class="text-success mb-5 mb-1">販売中</p>
      <% else %>
        <p class="text-danger mb-5 mb-1">販売停止中</p>
      <% end %>
    </div>
  </div>
    <div class="row">
      <div class="col-4 offset-4 text-center">
        <%= link_to "編集する", edit_admin_item_path(@item), class: 'form-control btn btn-success' %>
      </div>
    </div>

</div>