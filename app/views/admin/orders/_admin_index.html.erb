<table class="table">
  <thead class="bg-light">
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <% orders.each do |order| %>
  <tbody>
    <tr>
      <td>
        <%= link_to order_path(order) do %>
          <%= order.created_at.strftime('%Y/%m/%d/%H:%M:%S') %>
        <% end %>
      </td>
      <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
      <td><%= order.order_details.count %></td>
      <td><%= order.status %></td>
    </tr>
  <% end %>
  </tbody>
</table>