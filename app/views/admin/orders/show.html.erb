adminshow
<div class="container">
  <div calss="row">
        <h4>注文履歴詳細</h4>
      	<strong>注文情報</strong>
    	    <table class="table table-bordered">
                <tr>
                  <th class="bg-light">購入者</th>
                  <td><%= @order.name %></td>
                </tr>
                  <th class="bg-light">注文者</th>
            	    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
                <tr>
                　<th class="bg-light">配送先</th>
                  <td><%= @order.postal_code %><br>
                  	  <%= @order.address %><br>
                  	  <%= @order.name %>
                  </td>
                </tr>
                <tr>
                　<th class="bg-light">支払方法</th>
                  <td><%= @order.payment_method %></td>
                </tr>
                <tr>
                   <%= form_for(@order, url: order_path, method: :patch) do |f| %>
 	    <div class="col-xs-4">注文ステータス</div>
      	  <div class="col-xs-6">
            <%= f.select :status, Order.statuses.keys.to_a,{}, class: "order_status" %>
          </div>

      	<div class="actions">
          <div class="col-xs-2"><%= f.submit '更新'  ,class: "btn btn-primary" %></div>
      	</div>
      <% end %>
      </div>

	  <div class="buyer-order col-xs-9">
			<table class="table table-hover table-bordered table-inverse">
			    <thead>
			        <tr class="info">
			          <th class="col-xs-4">商品名</th>
			          <th>単価（税込）</th>
			          <th>数量</th>
			          <th>小計</th>
			          <th>製作ステータス</th>

			        </tr>
			    </thead>
				<tbody>
				<% if flash[:notice] %>
		          	<div class="flash">
		             <%= flash[:notice] %>
		          	</div>
	          	<% end %>
				<% @order_details.each do |order_detail| %>
					<tr>
			            <td class="text-left">
			              <%= order_detail.item.name %>
			            </td>
			            <td class="text-right">
			              ¥<%= tax_price(order_detail.item.price).to_s(:delimited) %>
			              <%#= order_detail.item.price %>
			            </td>
			            <td class="text-right">
			              <%= order_detail.amount %>
			            </td>
			            <td class="text-right">
			              ¥<%= sub_price(order_detail).to_s(:delimited) %>
			            </td>
			            <%= form_for(order_detail, url: admin_order_details_path(order_detail), method: :patch) do |f| %>
			            <td>
			            	<%= f.select :making_status, OrderDetail.making_statuses.keys, class: "order_status" %>
			            	<%= f.submit '更新'  ,class: "btn btn-success" %>
			            </td>
			            <% end %>
			      	</tr>
				<% end %>
				</tbody>
			</table>
	  </div>

	  <div class="col-xs-3  billing">
			<table class="table table-hover table-bordered table-condensed">
				<tr>
            		<th class="info">商品合計</th>
					<td>¥<%= total_payment(@order_details) %></td>
				</tr>
				<tr>
					<th class="info">送料</th>
					<td>¥<%= @order.shipping_cost %></td>
				</tr>
				<tr>
					<th class="info">請求金額合計</th>
					<td>¥<%=total_payment(@order_details)+@order.shipping_cost%></td>
				</tr>
		    </table>
	  </div>
    <div class="col-xs-12">
      <%#= link_to "戻る", admin_orders_path, class: "glyphicon glyphicon-home btn btn-info" %>
    </div>
	  </div>
  </div>

