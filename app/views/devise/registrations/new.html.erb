<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">

      <h2>Sign up</h2>

      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :ruby_last_name, "苗字 読み仮名" %><br />
          <%= f.text_field :ruby_last_name, class: "ruby_last_name" %>
        </div>

        <div class="field">
          <%= f.label :last_name, "苗字" %><br />
          <%= f.text_field :last_name, autofocus: true, class: "last_name" %>
        </div>

        <div class="field">
          <%= f.label :ruby_first_name, "名前 読み仮名" %><br />
          <%= f.text_field :ruby_first_name, class: "ruby_first_name" %>
        </div>

        <div class="field">
          <%= f.label :first_name, "名前" %><br />
          <%= f.text_field :first_name, autofocus: true, class: "first_name" %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, class: "email" %>
        </div>

        <div class="field">
          <%= f.label :phone_number %><br />
          <%= f.text_field :phone_number, class: 'phone_number' %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "password_confirm" %>
        </div>

        <!--ここから編集-->

        <div class="field">
          <%= f.label :postcode %><br />
          <%= f.text_field :postcode, autocomplete: 'postcode', class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :prefecture_name %><br /> <!--/ 47都道府県をプルダウンメニューで表示-->
          <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, { prompt: '選択してください' }, class: 'form-control' %>
        </div><!--質問 JpPrefecture::Prefecture この記述は何？クラス変数みたいなもの？-->

        <div class="field">
          <%= f.label :address_city %><br />
          <%= f.text_field :address_city, autocomplete: 'address_city', class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :address_street %><br />
          <%= f.text_field :address_street, autocomplete: 'address_street', class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :address_building %><br />
          <%= f.text_field :address_building, autocomplete: 'address_building', class: 'form-control' %>
        </div>

        <!--ここまで編集-->

        <div class="actions">
          <%= f.submit "Sign up" ,class: 'btn btn-sm btn-success' %>
        </div>

      <% end %>
      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>