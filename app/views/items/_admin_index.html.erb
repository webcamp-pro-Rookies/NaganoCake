	<h2 class="py-5">商品一覧</h2>

	(全<%= products.total_count %>件中、<%= products.count %>件を表示)
  <div class="col-xs-10 col-xs-offset-1">
    <%#= link_to new_admin_product_path, data: {"turbolinks" => false}, class: "btn btn-warning pull-right new_product" do %>
    <i class="fas fa-plus"></i>
    新規商品登録
    <%# end %>
	  <table class="table table-hover table-bordered table-condensed">
      <thead>
        <tr class="info">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
	    <% products.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <td>
            <%= link_to product_path(product), class: 'btn_link' do %>
    		    <%= product.product_name %>
    		    <% end %>
          </td>
          <td class="text-right col-xs-1">
            ¥<%= product.non_taxed_price.to_s(:delimited) %>
          </td>
          <td><%= product.category.category_name %></td>
          <td class="col-xs-2">
            <%= product.sales_status %>
          </td>
        </tr>
	    <% end %>
	    </tbody>
	   </table>
    </div>

		<%= paginate products %>