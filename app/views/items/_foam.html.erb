<%= form_with model:item, local:true do |f| %>

  <div class="form-group">
    <%= f.label :item_name, "商品名" %>
    <%= f.text_field :item_name, class: 'form-control item_name' %>
  </div>

  <div class="form-group">
    <%= f.label :introduction, "商品紹介文" %>
    <%= f.text_area :introduction, class: 'form-control introduction' %>
  </div>

  <div class="form-group">
    <%= f.label :price, "商品価格" %>
    <%= f.text_field :price, class: 'form-control price' %>
  </div>

  <div class="form-group">
    <%= f.label :image, "画像" %>
    <%= f.attachment_field :image, class: "form-control-file item_image" %>
  </div>

  <div class="form-group">
    <%= f.label :is_active, "商品ステータス" %>
    <div><%= f.select :is_active, [["販売中", true], ["売り切れ", false]] %></div>
  </div>

  <div class="form-group">
    <%= f.label :genre_id, "商品カテゴリー" %>
    <div><%= f.select :genre_id, item.get_genre_list %></div>
  </div>

  <div class="form-group mt-5">
    <%= f.submit class: 'btn btn-success' %>
  </div>

  <% end %>