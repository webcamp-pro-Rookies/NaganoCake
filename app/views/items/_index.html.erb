<h2 class="py-5">商品一覧</h2>
	(全<%= items.total_count %>件中、<%= items.count %>件を表示)
<div class="row">
	<% items.each do |product| %>
		<div class='col-md-3 col-sm-6'>
			<%= link_to product_path(product), class: 'img_link' do %>
				<%= attachment_image_tag(product, :image, fallback: "no-image-icon.jpg", class: "product_image", style: "width: 100%; height: 70%") %>
			<% end %>
			<div><%= product.name %></div>
			<div><%= product.price %></div>
  	</div>
	<% end %>
</div>
	<%= paginate items %>