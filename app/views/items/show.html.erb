<div class="row mt-5">

  <div class='col-md-3 offset-md-3'>
    <%= attachment_image_tag(@item, :image, fallback: "no-image-icon.jpg", class: "item_image", style: "width: 100%; height: 80%") %>
  </div>

  <div class='col-md-4'>
    <p class="mt-3" style="font-size: 24px; font-weight: bold;"><%= @item.name %></p>
    <p style="font-size: 24px; margin-bottom: 50px;"><%= @item.introduction %></p>
    <spap style="font-size: 24px; font-weight: bold;">￥<%= @item.price %></span>
    <spap style="font-size: 18px; ">(税抜)</span>
    <% if @item.is_active %>
      <p class="text-success mb-5 mb-1">販売中</p>
    <% else %>
      <p class="text-danger mb-5 mb-1">準備中</p>
    <% end %>

      <%= form_for(@cart_item , url: cart_items_path, method: :post) do |f| %>
        <%= f.hidden_field :item_id, value: @item.id %>
        <%= f.select :amount, options_for_select((1..10).to_a), include_blank: "個数選択" %>
        <%= f.submit "カートに入れる", class: "glyphicon glyphicon-shopping-cart btn btn-primary" %>
      <% end %>

      </div>


  </div>

    <%  if Item.admin?(current_customer) %>
      <%= link_to "Edit", edit_item_path(@item), class: 'to_item_edit_link col-md-1 offset-md-5 my-5 btn btn-success' %>
    <% end %>

</div>