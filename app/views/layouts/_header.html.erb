<header>
  <nav class="navbar navbar-nav bg-light">
    <div class="container">
      <div class="col-3">
        <h3><%= link_to "NaganoCAKE", root_path, class: "text-body font-italic border-bottom" %></h3>
      </div>
      <div class="col-9">
        <ul class="nav justify-content-around">
          <% if customer_signed_in? %>
            <li>
              ようこそ、<%= current_customer.last_name %><%= current_customer.first_name %>さん！
            </li>
            <li><%= link_to "マイページ", customer_path(current_customer), class: "btn btn-outline-dark"  %></li>
            <li><%= link_to "商品一覧", items_path, class: "btn btn-outline-dark"  %></li>
            <li><%= link_to "カート", cart_items_path, class: "btn btn-outline-dark"  %></li>
            <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-outline-dark"  %></li>
          <% elsif current_admin %>
            <li><%= link_to "商品一覧", admin_items_path, class: "btn btn-outline-dark"  %></li>
            <li><%= link_to "会員一覧", admin_customers_path, class: "btn btn-outline-dark"  %></li>
            <li><%= link_to "注文履歴一覧", admin_orders_path, class: "btn btn-outline-dark"  %></li>
            <li><%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-outline-dark"  %></li>
            <li><%= link_to "管理者ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-dark"  %></li>
          <% else %>
            <li><%= link_to "About", about_path, class: "btn btn-outline-dark" %></li>
            <li><%= link_to "商品一覧", items_path, class: "btn btn-outline-dark" %></li>
            <li><%= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-dark"  %></li>
            <li><%= link_to "ログイン", new_customer_session_path, class: "btn btn-outline-dark"  %></li>
            <li><%= link_to "管理者ログイン", new_admin_session_path, class: "btn btn-outline-dark"  %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>