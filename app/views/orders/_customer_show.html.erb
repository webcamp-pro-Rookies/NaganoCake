<div class="container">
  <div calss="row">
    <%# if @order.present? %>
      <div class="col-8">
        <h4>注文履歴詳細</h4>
      	<strong>注文情報</strong>
    	    <table class="table table-bordered">
            <tbody>
                <tr>
                  <th class="bg-light">注文日</th>
            	  <td class="text-left"><%= order.created_at.strftime('%Y/%m/%d') %></td>
                </tr>
                <tr>
                　<th class="bg-light">配送先</th>
                  <td class="text-left"><%= order.postal_code %><br>
                  	  <%= order.address %><br>
                  	  <%= order.name %>
                  </td>
                </tr>
                <tr>
                　<th class="bg-light">支払方法</th>
                  <td class="text-left"><%= order.payment_method %></td>
                </tr>
                <tr>
                  <th class="bg-light">ステータス</th>
                  <td class="text-left"><%= order.status %></td>
                </tr>
            </tbody>
          </table>
      </div>

      <div class="col-xs-3 col-xs-offset-1 billing">
        <strong><i class="fas fa-yen-sign"></i>請求情報</strong>
          	<table class="table  table-bordered table-condensed">
              <tr>
                <th class="info">商品合計</th>
                <td class="text-right col-xs-5"><%= @price_in_tax %>円</td>
              </tr>
              <tr>
                <th class="info">配送料</th>
                <td class="text-right col-xs-5"><%= order.shipping_cost %>円</td>
              </tr>
              <tr>
                <th class="info">ご請求金額</th>
                <td class="text-right col-xs-5"><%= @total_price %>円</td>
              </tr>
          </table>
      </div>
      <div class="col-xs-7 order-details">
      	<strong>注文内容</strong>
          <table class="table table-striped table-bordered table-condensed">
          	<thead>
              <tr class="info">
              <th>商品</th>
              <th>単価(税込)</th>
              <th>個数</th>
              <th>小計</th>
              </tr>
            </thead>
            <tbody>
            <%# @orders.each do |order| %>
              <tr>
                <td><%= order %></td>
                <td class="text-right"><%#= tax_price(order_detail.item.tax_out_price).to_s(:delimited) %>円</td>
                <td class="text-right"><%#= order_detail.amount %></td>
                <td class="text-right"><%#= sub_price(order_detail).to_s(:delimited) %>円</td>
              </tr>
            <%# end %>
            </tbody>
          </table>
      </div>
    <%# else %>
      <p>注文履歴がありません。</p>
    <%# end %>
  </div>
</div>