<%# if orders.present? %>
  <table class="table table-hover table-bordered table-condensed">
    <thead>
      <tr class="info">
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% orders.each do |order| %>
        <tr>
          <td>
	          <%= order.created_at.strftime('%Y/%m/%d') %>
	        </td>
	        <td class="text-left">
	          <%= order.postal_code %><br>
	          <%= order.prefecture_code %><%= order.address_city %><%= order.address_street %><%= order.address_building %><br>
	          <%= order.name %>
	        </td>
	        <td>
	          <% order.order_details.each do |order_detail| %>
	          	<%= order_detail.product.name %><br>
	          <% end %>
	        </td>
	        <td class="text-right">
	          <%= order.total_price.to_s(:delimited) %>円
	        </td>
	        <td>
	          <%= order.order_status %>
	        </td>
   	      <td>
 	          <%= link_to "注文詳細", 'orders_log_path', class: "glyphicon glyphicon-zoom-in btn btn-success" %>
 	        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%# else %>
  <p>注文履歴がありません。</p>
<%# end %>
