<%# if orders.present? %>
  <table class="table table-hover table-bordered table-condensed">
    <thead>
      <tr class="info">
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% orders.each do |order| %>
        <tr>
          <td>
	          <%= order.created_at.strftime('%Y/%m/%d') %>
	        </td>
	        <td class="text-left">
	          <%= order.postcode %><br>
	          <%= order.address %><br>
	          <%= order.distination_name %>
	        </td>
	        <td>
	          <%# order.each do |order| %>
	          	<%= @order.product.product_name %><br>
	          <%# end %>
	        </td>
	        <td class="text-right">
	          <%= order.billing_amount.to_s(:delimited) %>円
	        </td>
	        <td>
	          <%= order.order_status %>
	        </td>
   	      <td>
 	          <%= link_to "注文詳細", order_path(order), class: "glyphicon glyphicon-zoom-in btn btn-success" %>
 	        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%# else %>
  <p>注文履歴がありません。</p>
<%# end %>
