<%= form_with model:product, local:true do |f| %>

  <div class="form-group">
    <%= f.label :name, "商品名" %>
    <%= f.text_field :name, class: 'form-control book_title' %>
  </div>

  <div class="form-group">
    <%= f.label :description, "商品紹介文" %>
    <%= f.text_area :description, class: 'form-control book_body' %>
  </div>

  <div class="form-group">
    <%= f.label :non_taxed_price, "商品価格" %>
    <%= f.text_field :non_taxed_price, class: 'form-control book_body' %>
  </div>

  <div class="form-group", "画像" %>
    <%= f.label :image %>
    <%= f.attachment_field :image, class: "form-control-file product_image" %>
  </div>

  <div class="form-group", "商品ステータス" %>
    <%= f.label :sales_status %>
    <%= f.select :sales_status, Product.sales_statuses.keys, {} , class: "form-control-file sales_status" %>
  </div>

  <!--[["完全一致","perfect_match"], ["前方一致","forward_match"], ["後方一致","backward_match"], ["部分一致","partial_match"]]-->

  <div class="form-group mt-5">
    <%= f.submit class: 'btn btn-success' %>
  </div>

  <% end %>