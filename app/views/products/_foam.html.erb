<%= form_with model:product, local:true do |f| %>

  <div class="form-group">
    <%= f.label :product_name, "商品名" %>
    <%= f.text_field :product_name, class: 'form-control product_name' %>
  </div>

  <div class="form-group">
    <%= f.label :description, "商品紹介文" %>
    <%= f.text_area :description, class: 'form-control description' %>
  </div>

  <div class="form-group">
    <%= f.label :non_taxed_price, "商品価格" %>
    <%= f.text_field :non_taxed_price, class: 'form-control non_taxed_price' %>
  </div>

  <div class="form-group">
    <%= f.label :image, "画像" %>
    <%= f.attachment_field :image, class: "form-control-file product_image" %>
  </div>

  <div class="form-group", "商品ステータス" %>
    <%= f.label :sales_status %>
    <%= f.select :sales_status, Product.sales_statuses.keys, {} , class: "form-control-file sales_status" %>
  </div>

  <!--<div class="form-group">-->
  <!--  <#%= f.label :sales_status, "商品ステータス" %>-->
  <!--  <div><#%= f.select :sales_status, [["販売中", "aaa"], ["売り切れ", "aaa"]] %></div>-->
  <!--</div>-->

  <div class="form-group mt-5">
    <%= f.submit class: 'btn btn-success' %>
  </div>

  <% end %>