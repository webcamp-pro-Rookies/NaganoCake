
<div class='col-md-8 mx-auto'>
	<h2 class="py-5">商品一覧</h2>

	(全<%= @products.total_count %>件中、<%= @products.count %>件を表示)

	<div class="row">

	<% @products.each do |product| %>

	<div class='col-md-3 col-sm-6'>

		<%= link_to product_path(product), class: 'img_link' do %>
			<%= attachment_image_tag(product, :image, fallback: "no-image-icon.jpg", class: "product_image", style: "width: 100%; height: 70%") %>
		<% end %>

		<div><%= product.name %></div>
		<div><%= product.non_taxed_price %></div>

  	</div>

	<% end %>

	</div>
	<%= paginate @products %>

</div>