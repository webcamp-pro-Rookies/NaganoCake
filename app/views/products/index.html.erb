<h1>productsindex</h1>
<div class="container">
  <div class="row">
	<div class="col-xs-10 col-xs-offset-1">
		<h2>商品一覧
		  <span>
			  (全<%= @products.length%>件)
		  </span>
		</h2>
			<div class="row ">
				<% @products.each do |product| %>
				<div class="col-3">
					<div class="card" style="width: 18rem;">
						<div><%= attachment_image_tag(@product, :image, size: "180x130", fallback: "no-image-icon.jpg") %></div>
						
							<div class="card-body">
								<h5 class="card-title"><%= product.name %></h5>
							<p class="card-text"><%= product.description %></p>
      			</div>
    			</div>
    		</div>	
				<% end %>
  		</div>
			<div class="text-center"><%#= paginate(@products) %></div>
	</div>
</div>

