<div class="row mt-5">

  <div class='col-md-3 offset-md-3'>
    <%= attachment_image_tag(@product, :image, fallback: "no-image-icon.jpg", class: "product_image", style: "width: 100%; height: 80%") %>
  </div>

  <div class='col-md-4'>
    <p class="mt-3" style="font-size: 24px; font-weight: bold;"><%= @product.product_name %></p>
    <p style="font-size: 24px; margin-bottom: 70px;"><%= @product.description %></p>
    <spap style="font-size: 24px; font-weight: bold;">￥<%= @product.non_taxed_price %></span>
    <spap style="font-size: 18px; ">(税抜)</span>
    <% if @product.sales_status %>
      <p class="text-success">販売中</p>
    <% else %>
      <p class="text-danger">準備中</p>
    <% end %>
    <p class="mt-5 mb-1">個数選択</p>
    <p>カートに入れる</p>


          <div class="field">
        <%# if @product.is_sale == true %>
          <%# if @product.genre.is_valid == true %>
            <%= form_for(@cart_item , url: add_item_path, method: :post) do |f| %>
              <%= f.hidden_field :product_id, value: @product.id %>
              <%= f.select :quantity, options_for_select((1..10).to_a), include_blank: "個数選択" %>
              <%= f.submit "カートに入れる", class: "glyphicon glyphicon-shopping-cart btn btn-primary" %>
            <% end %>
          <%# else %>
            <h3>売り切れ中</h3>
          <%# end %>
        <%# elsif @product.is_sale == false %>
          <h3>売り切れ中</h3>
        <%# end %>
      </div>


  </div>

  <% if Product.admin?(current_user) %>
    <%= link_to "Edit", edit_product_path(@product), class: 'to_product_edit_link col-md-1 offset-md-5 my-5 btn btn-success' %>
  <% end %>

</div>