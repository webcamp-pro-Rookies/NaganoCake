<div class="container">
  <div class="row">
    <div class="col">
      <h3>配送先登録/一覧</h3>
      <%= form_with model: @shipping_address, local:true do |f| %>
      <table class="table table-borderless">
        <tr>
          <th><%= f.label :postcode, '郵便番号' %></th>
          <td><%= f.text_field :postcode %></td>
        </tr>
        <tr>
          <th><%= f.label :address, '住所' %></th>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <th><%= f.label :destination_name, '宛名' %></th>
          <td><%= f.text_field :destination_name %></td>
          <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
        </tr>
      <% end %>
      </table>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan=1 >
          </tr>
        </thead>
        <% @shipping_addresses.each do |shipping_address| %>
        <tbody>
          <tr>
            <td><%= shipping_address.postcode %></td>
            <td><%= shipping_address.address %></td>
            <td><%= shipping_address.destination_name %></td>
            <td><%= link_to "編集する", edit_shipping_address_path(shipping_address), class: "btn btn-success" %><%= link_to " 削除する", shipping_address_path(shipping_address), method: :delete, class: "btn btn-danger ml-3" %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>